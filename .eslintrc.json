{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": "xo",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["**/public/**/*.js"],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2]
  }
}
